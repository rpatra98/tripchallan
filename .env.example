# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma database connection string (using Prisma Accelerate)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY_HERE"

# Authentication secrets
JWT_SECRET="your-super-secret-jwt-key"
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000" 

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret" 

# Database
POSTGRES_URL="your_supabase_postgres_url"
POSTGRES_URL_NON_POOLING="your_supabase_postgres_non_pooling_url"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"

# Next Auth
NEXTAUTH_SECRET="your_nextauth_secret"
NEXTAUTH_URL="http://localhost:3000"

# Base URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Email settings
SMTP_HOST="your_smtp_host"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"
EMAIL_FROM="CBUMS System <your_email>"

# Temporarily disable email sending for testing if needed
# DISABLE_EMAIL_SENDING="true" 