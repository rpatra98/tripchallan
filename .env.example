# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Environment variables for CBUMS

# Authentication secrets
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Database (Supabase)
POSTGRES_URL="your_supabase_postgres_url"
POSTGRES_URL_NON_POOLING="your_supabase_postgres_non_pooling_url"

# Supabase - fill in with your Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Base URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Email settings
SMTP_HOST="your_smtp_host"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"
EMAIL_FROM="CBUMS System <your_email>"

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Optional settings
# DISABLE_EMAIL_SENDING="true"

# Optional - set to 1 to disable auth checks during troubleshooting
# DISABLE_AUTH=1 